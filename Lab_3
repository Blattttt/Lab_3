package com.company;

import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
	Scanner in = new Scanner(System.in);
	double a = 0;
	double s = 0;
	double sum = 0;
	int x = in.nextInt();
    for(int i = 1; i<=x; i++)
        a = Math.sin(i);
        s = 1/(s + a);
        sum = s + s;
    System.out.println(s);
    }
}
